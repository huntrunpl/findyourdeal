    unknown: "‚ùå Lingua sconosciuta. Supportate: "
  },
  es: {
    currentLanguage: "üåç Idioma actual: ",
    available: "Idiomas disponibles:",
    unknown: "‚ùå Idioma desconocido. Soportados: "
  },
  pt: {
    currentLanguage: "üåç Idioma atual: ",
